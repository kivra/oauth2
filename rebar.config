{erl_opts, [
    {platform_define, "^R", pre17},
    {platform_define, "^(R|17)", pre18},
    debug_info,
    warnings_as_errors,
    warn_export_vars,
    warn_unused_import,
    warn_keywords
]}.

{shell, [{apps, [oauth2]}]}.

{profiles, [
    {test, [
        {eunit_opts,          [verbose, {report, {eunit_surefire, [{dir, "."}]}}]},
        {cover_enabled,       true},
        {cover_opts,          [verbose]},
        {clean_files,         [".eunit", "ebin/*.beam", "test/*.beam"]},
        {deps,
          [ {meck,   "0.8.3"}
          , {proper, "1.5.0"}
          ] }
    ]}
]}.

{dialyzer, [
    {plt_apps, all_deps},
    incremental,
    {warnings, [unmatched_returns]}
]}.

{xref_checks, [
    undefined_function_calls,
    undefined_functions,
    locals_not_used,
    deprecated_function_calls,
    deprecated_functions
]}.
